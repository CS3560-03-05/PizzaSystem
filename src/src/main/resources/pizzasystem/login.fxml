<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizzasystem.LoginController">
    <children>
        <Label text="Login Page" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="passwordField" promptText="Password" />
        <Button text="Login" onAction="#loginUser" />
        <Label fx:id="statusLabel" />
        <Button text="Go Back" onAction="#goBackToHome" />
        <Button text="Register" onAction="#goToRegister" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
