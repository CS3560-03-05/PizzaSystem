<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pizzasystem.PlaceOrderController">
    <Label text="Enter Payment Information:"/>
    <TextField fx:id="paymentTextField" promptText="Card Number"/>
    <Label fx:id="checkoutMessage" />
    <Button text="Place Order" onAction="#placeOrder"/>
</VBox>
