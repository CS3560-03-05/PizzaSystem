<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizzasystem.preMadeController">
   <children>
      <Label text="Choose a Pre-Made Pizza"/>
      <Button text="ChickenBBQ" onAction="#orderChickenBbq"/>
      <ImageView fitWidth="150.0" fitHeight="150.0">
         <image>
            <Image url="@bbq.png"/> 
         </image>
      </ImageView>
      <Button text="Hawaiian" onAction="#orderHawaiian"/>
      <ImageView fitWidth="150.0" fitHeight="150.0">
         <image>
            <Image url="@hawaii.png"/> 
         </image>
      </ImageView>
      <Button text="Meat Lovers" onAction="#orderMeatLovers"/>
      <ImageView fitWidth="150.0" fitHeight="150.0">
         <image>
            <Image url="@meat.png"/> 
         </image>
      </ImageView>
      <Label fx:id="status"/>
      <Button text="Go Back" onAction="#goBackToHome" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
